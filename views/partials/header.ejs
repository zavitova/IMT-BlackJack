    <header class="header">
        <div class="container">
            <div class="logo">
                <a href="/"><img src="./img/logo.png"></a>
            </div>
            <div class="menu">
                <ul id="menu">
                    <li><a href="/">Main</a></li>
                    <li><a href="/signup">Signup</a></li>
                    <li><a href="/login">Login</a></li>
                    <li><a href="/game">Table</a></li>
                    <li><a href="/profile">Profile</a></li>
